<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/solution"
        android:layout_width="386dp"
        android:layout_height="90dp"
        android:layout_marginTop="60dp"
        android:background="#A4B0DB"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/zero"
        android:layout_width="59dp"
        android:layout_height="66dp"
        android:layout_marginEnd="16dp"
        android:text="0"
        app:layout_constraintEnd_toStartOf="@+id/equal"
        app:layout_constraintTop_toTopOf="@+id/equal"
/>

    <Button
        android:id="@+id/CLR"
        android:layout_width="147dp"
        android:layout_height="69dp"
        android:layout_marginTop="235dp"
        android:layout_marginEnd="18dp"
        android:text="CLR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/RD"
        android:layout_width="59dp"
        android:layout_height="66dp"
        android:layout_marginEnd="16dp"
        android:text="R/D"
        app:layout_constraintEnd_toStartOf="@+id/minus"
        app:layout_constraintTop_toTopOf="@+id/minus" />

    <Button
        android:id="@+id/COS"
        android:layout_width="74dp"
        android:layout_height="61dp"
        android:layout_marginEnd="20dp"
        android:text="COS"
        app:layout_constraintEnd_toStartOf="@+id/SIN"
        app:layout_constraintTop_toTopOf="@+id/SIN" />

    <Button
        android:id="@+id/SIN"
        android:layout_width="59dp"
        android:layout_height="66dp"
        android:layout_marginEnd="20dp"
        android:text="SIN"
        app:layout_constraintEnd_toStartOf="@+id/TG"
        app:layout_constraintTop_toTopOf="@+id/TG" />

    <Button
        android:id="@+id/TG"
        android:layout_width="59dp"
        android:layout_height="66dp"
        android:layout_marginEnd="20dp"
        android:text="TG"
        app:layout_constraintEnd_toStartOf="@+id/mult"
        app:layout_constraintTop_toTopOf="@+id/mult" />

    <Button
        android:id="@+id/point"
        android:layout_width="59dp"
        android:layout_height="66dp"
        android:layout_marginEnd="16dp"
        android:text="."
        app:layout_constraintEnd_toStartOf="@+id/plus"
        app:layout_constraintTop_toTopOf="@+id/plus" />

    <Button
        android:id="@+id/one"
        android:layout_width="59dp"
        android:layout_height="66dp"
        android:text="1"
        app:layout_constraintEnd_toEndOf="@+id/four"
        app:layout_constraintTop_toTopOf="@+id/two" />

    <Button
        android:id="@+id/two"
        android:layout_width="60dp"
        android:layout_height="61dp"
        android:text="2"
        app:layout_constraintEnd_toEndOf="@+id/five"
        app:layout_constraintTop_toTopOf="@+id/three" />

    <Button
        android:id="@+id/three"
        android:layout_width="59dp"
        android:layout_height="66dp"
        android:text="3"
        app:layout_constraintEnd_toEndOf="@+id/six"
        app:layout_constraintTop_toTopOf="@+id/zero" />

    <Button
        android:id="@+id/four"
        android:layout_width="59dp"
        android:layout_height="66dp"
        android:text="4"
        app:layout_constraintEnd_toEndOf="@+id/seven"
        app:layout_constraintTop_toTopOf="@+id/five" />

    <Button
        android:id="@+id/five"
        android:layout_width="59dp"
        android:layout_height="66dp"
        android:text="5"
        app:layout_constraintEnd_toEndOf="@+id/eight"
        app:layout_constraintTop_toTopOf="@+id/six" />

    <Button
        android:id="@+id/six"
        android:layout_width="59dp"
        android:layout_height="66dp"
        android:text="6"
        app:layout_constraintEnd_toEndOf="@+id/nine"
        app:layout_constraintTop_toTopOf="@+id/point" />

    <Button
        android:id="@+id/seven"
        android:layout_width="59dp"
        android:layout_height="66dp"
        android:text="7"
        app:layout_constraintEnd_toEndOf="@+id/COS"
        app:layout_constraintTop_toTopOf="@+id/eight" />

    <Button
        android:id="@+id/eight"
        android:layout_width="59dp"
        android:layout_height="66dp"
        android:text="8"
        app:layout_constraintEnd_toEndOf="@+id/SIN"
        app:layout_constraintTop_toTopOf="@+id/nine" />

    <Button
        android:id="@+id/nine"
        android:layout_width="59dp"
        android:layout_height="66dp"
        android:layout_marginEnd="20dp"
        android:text="9"
        app:layout_constraintEnd_toStartOf="@+id/RD"
        app:layout_constraintTop_toTopOf="@+id/RD" />

    <Button
        android:id="@+id/equal"
        android:layout_width="53dp"
        android:layout_height="63dp"
        android:layout_marginTop="28dp"
        android:text="="
        app:layout_constraintEnd_toEndOf="@+id/plus"
        app:layout_constraintTop_toBottomOf="@+id/plus" />

    <Button
        android:id="@+id/plus"
        android:layout_width="55dp"
        android:layout_height="62dp"
        android:layout_marginTop="28dp"
        android:text="+"
        app:layout_constraintEnd_toEndOf="@+id/minus"
        app:layout_constraintTop_toBottomOf="@+id/minus" />

    <Button
        android:id="@+id/minus"
        android:layout_width="54dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="@+id/dev"
        app:layout_constraintTop_toBottomOf="@+id/dev" />

    <Button
        android:id="@+id/mult"
        android:layout_width="56dp"
        android:layout_height="64dp"
        android:layout_marginEnd="20dp"
        android:text="x"
        app:layout_constraintEnd_toStartOf="@+id/dev"
        app:layout_constraintTop_toTopOf="@+id/dev" />

    <Button
        android:id="@+id/dev"
        android:layout_width="57dp"
        android:layout_height="66dp"
        android:layout_marginTop="316dp"
        android:layout_marginEnd="16dp"
        android:text="/"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>